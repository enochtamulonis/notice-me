<div class="h-full w-full" data-controller="modal-content"
     data-modal-content-modal-selector-value="#main-modal">
  <%= turbo_stream_from dom_id(chat), :messages %>
  <div class="h-full w-full flex flex-col overflow-y-scroll" id="<%= dom_id(chat, :container) %>">
    <%= turbo_frame_tag :messages do %>
        <% chat.messages.each do |message| %>
          <%= render "messages/message", message: message %>
        <% end %>
    <% end %>
  </div>
</div>
