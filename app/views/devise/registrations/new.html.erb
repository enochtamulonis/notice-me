<div class="min-h-screen w-full bg-blue-300 flex justify-center pt-20">
  <div class="w-11/12 md:w-2/3 bg-gray-600 flex flex-col p-4">
    <h2 class="text-gray-100 text-center">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'w-full md:w-2/3 lg:w-1/2 mx-auto text-gray-100'}, data: { remote: false, turbo: false }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field">
        <%= f.label :username %><br />
        <%= f.text_field :username, autofocus: true, autocomplete: "username", class: 'w-full bg-transparent border-b-2 border-gray-300 outline-none focus:outline-none focus:border-blue-300' %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-full bg-transparent border-b-2 border-gray-300 outline-none focus:outline-none focus:border-blue-300' %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: 'w-full bg-transparent border-b-2 border-gray-300 outline-none focus:outline-none focus:border-blue-300' %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'w-full bg-transparent border-b-2 border-gray-300 outline-none focus:outline-none focus:border-blue-300' %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: 'btn-primary' %>
      </div>
    <% end %>
    <div class="flex flex-col items-center w-full md:w-1/3 mx-auto text-gray-100">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
